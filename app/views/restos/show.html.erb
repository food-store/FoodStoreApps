                <div>
                  <a href="<%= restaurants_menus_path(@restaurant.id) %>" class="btn-menu animated fadeIn scrollto">Nos menus</a>
                  <a href="#book-a-table" class="btn-book animated fadeIn scrollto">Réserver</a>
                </div>
