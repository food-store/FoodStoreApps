<!-- ======= Hero Section ======= -->
<section id="hero">
  <div class="hero-container">
    <div id="heroCarousel" class="carousel slide carousel-fade" data-ride="carousel">
      <ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

      <!-- Slide 1 -->
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag  "slide/slide-1.jpg", :class => "d-block" %>
            <div class="carousel-container">
              <div class="carousel-content">
                <h2 class="animated fadeInDown"><span><%= @restaurant.name %></span> Restaurant</h2>
                <p class="animated fadeInUp"><%= @restaurant.description %></p>
                <div>
                  <a href="<%= restaurants_menus_path(@restaurant.id) %>" class="btn-menu animated fadeIn scrollto">Nos menus</a>
                  <a href="#book-a-table" class="btn-book animated fadeIn scrollto">Réserver</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Slide 2 -->
          <div class="carousel-item">
            <%= image_tag  "slide/slide-2.jpg", :class => "d-block w-100" %>
            <div class="carousel-container">
              <div class="carousel-content">
                <h2 class="animated fadeInDown"><span><%= @restaurant.name %></span> Restaurant</h2>
                <p class="animated fadeInUp"><%= @restaurant.adress %></p>
                <div>
                  <a href="<%= restaurants_menus_path(@restaurant.id) %>" class="btn-menu animated fadeIn scrollto">Nos menus</a>
                  <a href="#book-a-table" class="btn-book animated fadeIn scrollto">Réserver</a>
                </div>
              </div>
            </div>
          </div>

          <!-- Slide 3 -->
          <div class="carousel-item">
            <%= image_tag  "slide/slide-3.jpg", :class => "d-block w-100" %>
            <div class="carousel-container">
              <div class="carousel-content">
                <h2 class="animated fadeInDown"><span><%= @restaurant.name %></span> Restaurant</h2>
